<div class="section mb-16">

  <div class="featured-menu-header flex flex-col items-center mb-8">
    <img src="/assets/img/what-customers-say.webp" alt="order now">
    <h2 class="text-5xl font-bold mb-4 text-center uppercase mt-4">Reviews</h2>
  </div>

  <div class="flex flex-col items-center mb-8 xl:p-0 p-4">

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">

      {%- for review in home.reviews -%}

      <div class="bg-white/50 rounded-2xl p-4 flex flex-col items-start backdrop-blur h-[225px]">
        
        <div class="font-bold mb-2">{{ review.fields.reviewerName }}</div>
        <div class="stars flex flex-row mb-2 text-yellow-500">
          <span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9733;</span><span>&#9733;</span>
        </div>
        <p class="text-left font-thin leading-tight text-clip overflow-auto overflow-x-hidden elipsis">{{ review.fields.reviewText }}</p>  
      </div>

      {%- endfor -%}

    </div>

  </div>

</div>