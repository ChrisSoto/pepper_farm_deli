
{# 1 Featured Product #}
{%- if home.featuredProducts | length === 1 -%}
  <div class="section-full h-[200px] mb-8">
  
    <div id="marquee-container" class="block h-[40px] bg-zinc-900 text-white uppercase text-xl p-1 truncate">
      <div id="marquee">
        {{ home.marqueeText }}
      </div>
    </div>

    <div class="m-auto grid grid-cols-1">
      <div class="bg-red-100 h-[200px]">
        <img class="w-full h-full object-cover" src="{{ home.featuredProducts[0].image }}" alt="{{ home.featuredProducts[0].alt }}">
      </div>
    </div>

  </div>

{# 2 Featured Product #}
{%- elif home.featuredProducts | length === 2 -%}
  <div class="section-full h-[200px] mb-8">

    <div id="marquee-container" class="block h-[40px] bg-zinc-900 text-white uppercase text-xl p-1 truncate">
      <div id="marquee">
        {{ home.marqueeText }}
      </div>
    </div>

    <div class="m-auto grid grid-cols-2">
      {%- for product in home.featuredProducts -%}
        <div class="bg-red-100 h-[200px] relative">

          <img eleventy:widths="400" class="w-full h-full object-cover object-center" src="https:{{ product.fields.images[0].fields.file.url }}" alt="{{ product.fields.description }}">

          <div class="flex flex-col justify-center items-center featured-product p-4 h-full w-full absolute top-0 hover:bg-white/40 opacity-0 hover:opacity-100 transition-all duration-300">
            <h3 class="text-3xl text-center font-bold mb-2 text-black"><a href="/menu/{{ product.fields.name | slugify }}/">{{ product.fields.name }}</a></h3>
          </div>

        </div>
      {%- endfor -%}
    </div>

  </div>

