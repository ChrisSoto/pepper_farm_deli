<div class="section mb-16">
  <div class="flex flex-col-reverse sm:flex-row">

    <div class="h-[400px] bg-yellow-100 w-full sm:w-5/12 md:w-7/12 text-right bg-[url('/assets/img/store-image.png')] bg-no-repeat bg-cover bg-bottom">
      <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5125.226032423021!2d-116.98999397793727!3d32.8413768045558!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80dbfd5527e45a1f%3A0x7a9e6f1bc8ad653f!2sPepper%20Farm%20Deli!5e0!3m2!1sen!2sus!4v1721165814984!5m2!1sen!2sus" width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>

    <div class="w-full sm:w-7/12 md:w-5/12 pl-8 sm:p-4 sm:py-16 pb-8">
      
      <div class="text-5xl font-bold mb-8 deli-grad-text">VISIT US</div>

      <a href="https://maps.app.goo.gl/RsE3F5iA7ShZLqWX7" target="_blank" class="flex flex-row justify-start items-center gap-8 mb-4 hover:underline">
        <div class="icon">
          <img eleventy:widths="50" src="/assets/img/map.png" alt="store hours icon"/>
        </div>
        <div class="text-left text-lime-600">
          {{ home.storeAddress.fields.address }}, {{ home.storeAddress.fields.suite }}<br>
          {{ home.storeAddress.fields.city }}, {{ home.storeAddress.fields.state }} {{ home.storeAddress.fields.zipcode }}
        </div>
      </a>

      <div class="flex flex-row justify-start items-center gap-8 mb-4">
        <div class="icon">
          <img eleventy:widths="50" src="/assets/img/hours.png" alt="store hours icon"/>
        </div>
        <div class="text-left">
          {%- for hour in home.storeAddress.fields.hours -%}
            {{ hour | safe }}<br>
          {%- endfor -%}
        </div>
      </div>

      <a href="tel:+16192018129" class="flex flex-row justify-start items-center gap-8 hover:underline">
        <div class="icon">
          <img eleventy:widths="50" src="/assets/img/phone.png" alt="store hours icon"/>
        </div>
        <div class="text-left text-lime-600">
          {{ home.storeAddress.fields.phone }}
        </div>
      </a>

    </div>
  </div>
</div>