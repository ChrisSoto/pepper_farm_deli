<div class="section mb-16 relative">

  <span class="scrolling-featured-menu text-white/50">DELICIOUS</span>

  <div class="featured-menu-header flex flex-col items-center mb-8">
    <img src="/assets/img/order_now.png" alt="order now">
    <h2 class="text-5xl font-bold mb-4 text-center uppercase">Our <span class="deli-grad-text">Special<br>Menu</span> Selection</h2>
    <p class="text-zinc-500 text-center w-3/4 md:w-1/2 lg:w-1/3">Everything you need to know about our menu, from when to where, what to expect, and more.</p>
  </div>

  <div class="flex flex-row justify-around">

  {%- for item in featuredMenu -%}

    {# mobile #}
    {%- if item.mobile -%}
    <div class="flex md:hidden flex-col items-center">

      <div class="deli-grad-bg h-20 w-20 rounded-2xl mb-4">
        <img class="mx-auto mt-4 h-12 w-12" src="{{ item.image }}" alt="{{ item.alt }}"/>
      </div>

      <div class="text-center leading-tight font-bold">
        {{ item.name | safe }}
      </div>

    </div>
    {%- endif -%}

    {# desktop #}
    <div class="hidden md:flex flex-col items-center">

      <div class="deli-grad-bg h-20 w-20 rounded-2xl mb-4">
        <img class="mx-auto mt-4 h-12 w-12" src="{{ item.image }}" alt="{{ item.alt }}"/>
      </div>

      <div class="text-center leading-tight font-bold">
        {{ item.name | safe }}
      </div>

    </div>
    
  {%- endfor -%}
  </div>

  <div class="m-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">

  {%- for product in featuredProducts -%}
    <div class="featured-product flex flex-col items-center">
      <img class="-mb-20 z-10 sm:w-[225px] w-[325px]" src="{{ product.image }}" alt="{{ product.alt }}">
      <div class="flex flex-col justify-end items-start prod-grad-bg text-zinc-700 border border-zinc-300 p-4 w-[325px] h-[200px] sm:w-[225px] sm:h-[250px] rounded-xl shadow-2xl">
        <h4 class="font-bold text-md leading-tight mb-2">{{ product.name }}</h4>
        <p class="text-sm">{{ product.description }}</p>
      </div>
    </div>
  {%- endfor -%}
  </div>

</div>