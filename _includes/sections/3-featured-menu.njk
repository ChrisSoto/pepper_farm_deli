<div class="section mb-16">

  <div class="featured-menu-header flex flex-col items-center mb-8">
    <img class="mt-8" src="/assets/img/our-menu.webp" alt="order now">
    <h2 class="text-5xl font-bold mb-4 text-center uppercase">Our <span class="deli-grad-text">Special<br>Menu</span> Selection</h2>
    <p class="text-zinc-500 text-center w-3/4 md:w-1/2 lg:w-1/3">Everything you need to know about our menu, from when to where, what to expect, and more.</p>
  </div>

  <div class="flex flex-row justify-around">

  {%- for category in home.featuredCategories -%}

    {# mobile #}
    {%- if category.fields.featuredOnMobile -%}
    <a href="/menu/#{{ category.fields.name | slugify }}" class="flex md:hidden flex-col items-center hover:underline w-[100px] sm:w-[150px]">

      <div class="deli-grad-bg h-20 w-20 rounded-2xl mb-4">
        <img class="mx-auto mt-4 h-12 w-12" src="http:{{ category.fields.icon.fields.file.url }}" alt="{{ category.description }}"/>
      </div>

      <div class="text-center leading-tight font-bold">
        {{ category.fields.name | safe }}
      </div>

    </a>
    {%- endif -%}

    {# desktop #}
    <a href="/menu/#{{ category.fields.name | slugify }}" class="hidden md:flex flex-col items-center hover:underline">

      <div class="deli-grad-bg h-20 w-20 rounded-2xl mb-4">
        <img class="mx-auto mt-4 h-12 w-12" src="https:{{ category.fields.icon.fields.file.url }}" alt="{{ category.description }}"/>
      </div>

      <div class="text-center leading-tight font-bold">
        {{ category.fields.name | safe }}
      </div>

    </a>
    
  {%- endfor -%}
  </div>

  <div class="m-auto grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 pt-16 relative">

  {%- for item in home.featuredMenuItems -%}
    <div class="featured-product flex flex-col items-center {{ '' if loop.last else 'mb-16' }}">

      {%- for image in item.fields.images -%}
      <a style="z-index: 10" href="/menu/{{ item.fields.name | slugify }}/">
        <img class="-mb-20 z-10 sm:w-[225px] w-[325px] h-[325px] sm:h-[225px] sm:w-[225px] rounded-full object-cover border-4 border-lime-500 hover:border-lime-600 transition-all duration-300 hover-grow hover:shadow-2xl" eleventy:widths="325" src="https:{{ image.fields.file.url }}" alt="{{ product.alt }}">
      </a>
      {%- endfor -%}

      <div class="flex flex-col justify-end items-start text-zinc-700 border border-zinc-300 p-4 w-[325px] h-[200px] sm:w-[225px] sm:h-[250px] rounded-xl shadow-2xl backdrop-blur-sm bg-white/40">
        <h4 class="font-bold text-md leading-tight mb-2">{{ item.fields.name }}</h4>
        <p class="text-sm">{{ item.fields.description | truncate(120)}}</p>
      </div>
    </div>
  {%- endfor -%}
  </div>

</div>