<div class="flex justify-center items-center lg:max-w-screen-md xl:max-w-screen-lg md:max-w-screen-sm bg-lime-500 w-full shadow-md mx-auto mb-16">
  <div class="flex flex-col justify-center w-full p-4">

    <form id="contact-form" name="contact" method="post" enctype="multipart/form-data" action="https://us-central1-imageonsd-af038.cloudfunctions.net/addPPDCateringContact/" novalidate="">
      <div class="form_fields">

        <div class="grid sm:grid-cols-3 gap-2 sm:gap-4 mb-4">

          <div class="field">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold " for="full-name">Full Name<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="full_name" id="full-name" type="text" onblur="check('full-name')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3" placeholder="John Doe">
          </div>

          <div class="field">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold" for="e-mail">Email<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="e_mail" id="e-mail" type="email" onblur="check('e-mail')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3" placeholder="john.doe@gmail.com">
          </div>

          <div class="field">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold" for="phone-number">Phone<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="phone_number" id="phone-number" type="tel" onblur="check('phone-number')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3" placeholder="ex. 619-312-0941" aria-invalid="false">
          </div>

        </div>

        <div class="grid sm:grid-cols-3 gap-2 sm:gap-4 mb-4">

          <div class="field">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold " for="event-date">Event Date<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="event_date" id="event-date" type="date" onblur="check('event-date')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3">
          </div>

          <div class="field">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold " for="no-of-guests">No. of Guests<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="no_of_guests" id="no-of-guests" type="number" onblur="check('no-of-guests')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3" placeholder="15">
          </div>

          <div class="field">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold " for="event-type">Event Type<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="event_type" id="event-type" type="text" onblur="check('event-type')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3" placeholder="ex. wedding">
          </div>

        </div>

        <div class="grid sm:grid-cols-3 gap-2 sm:gap-4 mb-4">

          <div class="field col-span-2 sm:col-span-1">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold " for="pickup">Pickup Options<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <select name="pickup" id="pickup" onblur="check('pickup')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3">
              <option value="pickup">Pickup in Store</option>
              <option value="delivery">Deliver to Location</option>
            </select>
          </div>

          <div class="field col-span-2">
            <label class="field_label block mb-2 text-sm text-gray-100 font-bold " for="event-location">Event Location<span class="required text-red-500 mb-2 text-sm font-medium italic pl-2">(Required)</span></label>
            <input name="event_location" id="event-location" type="text" onblur="check('event-location')" required class="shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3" placeholder="ex. Santee Event Center">
          </div>

        </div>

        <div class="field mb-4">
          <label class="field_label block mb-2 text-sm text-gray-100 font-bold" for="comments">Comments</label>
          <textarea name="comments" id="comments" onblur="check('comments')" class="textarea shadow-sm bg-gray-100 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-gray-500 focus:border-gray-500 block w-full p-3"
            placeholder="Do you use peanut oil in your food?" rows="5" cols="50"></textarea>
        </div>

      </div>

      <input class="form_footer w-full flex flex-row justify-center items-center w-full cursor-pointer text-sm uppercase bg-yellow-400 text-white font-bold p-4 font-medium hover:bg-red-700 transition-colors duration-300" id="contact-submit" type="submit" class="button uppercase" value="Submit" >

    </form>

  </div>
</div>